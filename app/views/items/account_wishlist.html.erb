<div class="container container__form">
  <ul>
    <% if @wishlist_items.empty? %>
      <p>There no items in your wishlist.</p>
    <% else %>
      <% @wishlist_items.each do |item| %>
        <li><%= link_to item.title, item %> - <%= number_to_currency item.price %></li>
      <% end %>
    <% end %>
  </ul>
</div>