    <div class="label">
      <%= form.label :description %>
    </div>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <div class="label">
      <%= form.label :category %>
    </div>
    <%= form.text_field :category %>
  </div>

  <div class="field">
    <div class="label">
      <%= form.label :price %>
    </div>
    <%= form.number_field :price %>
  </div>

  <div class="actions back">
    <%= form.submit %>
  </div>
<% end %>
